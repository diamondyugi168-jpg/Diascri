--// Delta Combo Keyboard (Clean Version)

local VIM = game:GetService("VirtualInputManager")

--// GUI
local gui = Instance.new("ScreenGui")
gui.Name = "DeltaKeyboard"
gui.ResetOnSpawn = false
gui.Parent = gethui()

local main = Instance.new("Frame", gui)
main.Size = UDim2.new(0, 320, 0, 140)
main.Position = UDim2.new(1, -340, 0.5, -70)
main.BackgroundColor3 = Color3.fromRGB(25,25,25)
main.BackgroundTransparency = 0.35
main.BorderSizePixel = 0

--// TOGGLE
local toggle = Instance.new("TextButton", gui)
toggle.Size = UDim2.new(0, 50, 0, 50)
toggle.Position = UDim2.new(1, -60, 1, -60)
toggle.Text = "KB"
toggle.TextSize = 18
toggle.BackgroundTransparency = 0.2
toggle.BorderSizePixel = 0

local open = true
toggle.MouseButton1Click:Connect(function()
	open = not open
	main.Visible = open
end)

--// TAP
local function tap(key, delay)
	VIM:SendKeyEvent(true, key, false, game)
	task.wait(delay or 0.08)
	VIM:SendKeyEvent(false, key, false, game)
end

--// COMBOS
local function LightFlash()
	tap(Enum.KeyCode.R)
	tap(Enum.KeyCode.K)
	tap(Enum.KeyCode.K)
end

local function HeavyFlash()
	tap(Enum.KeyCode.R)
	tap(Enum.KeyCode.L)
	tap(Enum.KeyCode.K)
end

local function HeavyBom()
	tap(Enum.KeyCode.R)
	tap(Enum.KeyCode.L)
	tap(Enum.KeyCode.L)
end

local function Dash()
	tap(Enum.KeyCode.R)
	tap(Enum.KeyCode.Space)
	tap(Enum.KeyCode.Space, 0.05)
end

local function Block()
	VIM:SendKeyEvent(true, Enum.KeyCode.F, false, game)
	task.wait(0.12)
	VIM:SendKeyEvent(false, Enum.KeyCode.F, false, game)
end

--// BUTTON
local function btn(text, x, y, func)
	local b = Instance.new("TextButton", main)
	b.Size = UDim2.new(0, 90, 0, 40)
	b.Position = UDim2.new(0, x, 0, y)
	b.Text = text
	b.TextSize = 16
	b.BackgroundTransparency = 0.15
	b.BorderSizePixel = 0
	b.MouseButton1Click:Connect(func)
end

--// LAYOUT
btn("Light Flash", 20, 20, LightFlash)
btn("Heavy Flash", 120, 20, HeavyFlash)
btn("Heavy Bom",   220, 20, HeavyBom)

btn("Dash",  20, 80, Dash)
btn("Block", 120, 80, Block)
